                                    </select>
                                    <div class="invalid-feedback">
                                    Please select a valid state.
                                    </div>
                                </div>

                                <input type="hidden" value="{{ csrfToken }}" name="csrfToken">
                                
                                <div class="col-md-3">
                                </div>
                                <div class="col-md-6">
                                    <button class="btn btn-outline-primary btn-md btn-block" type="submit" name="impressionExacte"><i class="fa fa-repeat me-2"></i> {% trans %}Exécuter la requête{% endtrans %}</button>
                                </div>
                                <div class="col-md-3">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
