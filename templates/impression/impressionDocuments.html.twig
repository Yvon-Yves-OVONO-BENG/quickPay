                                        {% endfor %}

                                    </select>
                                    <div class="invalid-feedback">
                                    Please select a valid state.
                                    </div>
                                </div>


                                <div class="col-md-3">
                                    <label for="etatGarde" class="form-label">{% trans %}Etat garde{% endtrans %}</label>
