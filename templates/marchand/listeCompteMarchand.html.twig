{% extends 'base.html.twig' %}

{% block title %}

        {% trans %}Liste des comptes marchands{% endtrans %}

{% endblock %}

{% block stylesheets %}
	<style>
		th,
		tfoot {
			font-size: 15px !important;
			text-align: center !important;
			font-weight: bold !important;
			background-color: #F1F1F1 !important;
		}

		.infoTable {
			text-align: center !important;
			vertical-align: middle !important;
		}

		tr:hover {
			background-color: rgba(62, 128, 235, 0.2) !important;
			color: #3e80eb !important;
		}
	</style>
{% endblock %}

{% block body %}
<!-- App-Content -->
				<div class="hor-content main-content">
					<div class="container">

						<!--Page header-->
						<div class="page-header">
							<div class="page-leftheader">
								<h4 class="page-title mb-0 text-primary">
                                    <i class="fa fa-money me-2"></i>{% trans %}Comptes marchands{% endtrans %}
                                </h4>
							</div>
							<div class="page-rightheader">
								<div class="btn-list">
                                    <button type="button" class="btn btn-primary mb-1 me-2">
                                        <span class="badge bg-white text-dark">{{ comptemarchands|length|number_format }}</span>
                                        <span>
                                           
                                            {% trans %}comptes marchands{% endtrans %}
                                       
                                        </span>
                                    </button>
									<a href="javascript:void(0);"  class="btn btn-outline-primary btn-pill">
										<i class="fe fe-printer me-2 fs-14"></i> {% trans %}Imprimer{% endtrans %}
                                    </a>
                                    <a href="javascript:void(0);"  class="btn btn-primary btn-pill" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
										<i class="fa fa-calendar me-2 fs-14"></i> {% trans %}Filtrer{% endtrans %}</a>
									<div class="dropdown-menu border-0">
											<a class="dropdown-item" href="javascript:void(0);">{% trans %}Aujourd'hui{% endtrans %}</a>
											<a class="dropdown-item" href="javascript:void(0);">{% trans %}Hier{% endtrans %}</a>
											<a class="dropdown-item active" href="javascript:void(0);">{% trans %}Les 7 derniers jours{% endtrans %}</a>
											<a class="dropdown-item" href="javascript:void(0);">{% trans %}Les 30 derniers jours{% endtrans %}</a>
											<a class="dropdown-item" href="javascript:void(0);">{% trans %}Le mois dernier{% endtrans %}</a>
											<a class="dropdown-item" href="javascript:void(0);">{% trans %}Les 6 deniers mois{% endtrans %}</a>
											<a class="dropdown-item" href="javascript:void(0);">{% trans %}L'an dernier{% endtrans %}</a>
									</div>
								</div>
							</div>
						</div>
						<!--End Page header-->


						<div class="card border-primary">
                            <div class="card-header">
                                <div class="col-md-4">
                                    <div class="card-title">
                                      
                                        <i class="fa fa-money me-2"></i>{% trans %}Comptes marchands{% endtrans %}
             
                                    </div>
                                </div>
                                <div class="col-md-8 mt-4 text-right">
                                    <form method="post" action="javascript:void(0);" target="_blank" class="row g-3 needs-validation" novalidate>
												
                                        <div class="row">

                                            <div class="col-md-4">
                                                <input type="date" name="dateDebut" class="form-control" id="validationCustom01" required>
                                                <div class="invalid-feedback">
                                                    {% trans %}Champ requis{% endtrans %}
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <input type="date" name="dateFin" class="form-control" id="validationCustom01" required>
                                                <div class="invalid-feedback">
                                                    {% trans %}Champ requis{% endtrans %}
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="col-md-4">
                                                    <button class="btn btn-outline-primary" type="submit" name="impressionFacturePeriode"><i class="fe fe-printer me-2"></i>{% trans %}Imprimer{% endtrans %}</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                
                            </div>
                            <div class="card-body">
                                <div class="">
                                    <div class="table-responsive">
                                        <table id="example" class="table table-bordered text-nowrap key-buttons">
                                            <thead>
                                                <tr>
                                                    <th class="border-bottom-0">N°</th>
                                                    <th class="border-bottom-0">{% trans %}Nom{% endtrans %}</th>
                                                    <th class="border-bottom-0">{% trans %}Numero de compte{% endtrans %}</th>
                                                    <th class="border-bottom-0">{% trans %}contact{% endtrans %}</th>
                                                    <th class="border-bottom-0">Montant</th>
                                                    <th class="border-bottom-0">Actions</th>
                                                </tr>
                                            </thead>
                                            <tfoot>
                                                <tr>
                                                    <th class="border-bottom-0">N°</th>
                                                    <th class="border-bottom-0">{% trans %}Nom{% endtrans %}</th>
                                                    <th class="border-bottom-0">{% trans %}Numero de compte{% endtrans %}</th>
                                                    <th class="border-bottom-0">{% trans %}contact{% endtrans %}</th>
                                                    <th class="border-bottom-0">Montant</th>
                                                    <th class="border-bottom-0">Actions</th>
                                                </tr>
                                            </tfoot>
                                            <tbody>
                                                {% set i = 1 %}
                                                {% for comptemarchand in comptemarchands %}
                                                    <tr>
                                                        <td style="text-align:center; vertical-align: middle;">{{ i }}</td>
                                                        <td style="vertical-align: middle;">{{ comptemarchand.username }}</td>
                                                        <td style="vertical-align: middle;"></td>
                                                        <td style="text-align:center; vertical-align: middle;">{{ comptemarchand.contact }}</td>
                                                        <td style="text-align:center; vertical-align: middle;"></td>
                                                        <td style="text-align:center; vertical-align: middle;">
                                                            

                                                            <div class="custom-controls-stacked">
                                                                <form action="{{path('ouvrir_opmarchand')}}" method="post">
                                                                    <label class="custom-control custom-checkbox custom-control-lg">
                                                                        <input type="checkbox" class="custom-control-input" name="opmarchand" value="{{comptemarchand.slug}}">
                                                                        <span class="custom-control-label custom-control-label-lg"></span>
                                                                    </label>
                                                                </form>
                                                                
                                                            </div>
                                                        </td>
                                                        
                                                       <script>
                                                        // Soumet automatiquement le formulaire contenant la checkbox cochée
                                                        document.querySelectorAll('.custom-control-input').forEach(function (checkbox) {
                                                            checkbox.addEventListener('change', function () {
                                                            if (this.checked) {
                                                                this.closest('form').submit();
                                                            }
                                                            });
                                                        });
                                                        </script>
                                                    </tr>
                                                    {% set i = i + 1 %}
                                                {% endfor %}
                                                
                                                
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
								<!--/div-->

					</div>
				</div>
				<!-- End app-content-->
{% endblock %}
