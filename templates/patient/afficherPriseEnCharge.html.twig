{% extends 'base.html.twig' %}

{% block title %}
   {% trans %}Liste des prises en charge de : {% endtrans %} {{ patient ? patient.nom: "" }}
{% endblock %}

{% block stylesheets %}
	<style>
		th,
		tfoot {
			font-size: 15px !important;
			text-align: center !important;
			font-weight: bold !important;
			background-color: #F1F1F1 !important;
		}

		tr:hover {
			background-color: rgba(62, 128, 235, 0.2) !important;
			color: #3e80eb !important;
		}

        td {
			font-size: 12px !important;
			text-align: center !important;
		}
	</style>
{% endblock %}



{% block body %}
<!-- App-Content -->
<div class="hor-content main-content">
	<div class="container">

		<!--Page header-->
		<div class="page-header">
			<div class="page-leftheader">
				<h4 class="page-title mb-0 text-primary">{% trans %}Tableau de bord de : {% endtrans %} {{ app.user.nom }}</h4>
			</div>
			<div class="page-rightheader">
				<div class="btn-list">
					<a href="{{ path ('ajouter_patient') }}" class="btn btn-outline-primary"><i class="fe fe-plus me-2"></i>
						{% trans %}Ajouter un patient{% endtrans %}
					</a>
					<a href="{{ path ('imprimer_les_factures_patient', {'codePatient': patient.code }) }}" class="btn btn-outline-primary" target="_blank"><i class="fe fe-printer me-2"></i>
						{% trans %}Imprimer{% endtrans %}
					</a>
					
				</div>
			</div>
		</div>
		<!--End Page header-->

		<!--Row-->
		<div class="row">
			<div class="col-xl-12 col-lg-12 col-md-12">
				<div class="card border-primary">
					<div class="card-header">
						<div class="col-xl-8 col-lg-8 col-md-8">
							<h3 class="card-title">{% trans %}Prises en charge de :{% endtrans %} {{ patient ? patient.nom: "" }}</h3>
						</div>
						<div class="col-xl-4 col-lg-4 col-md-4">
							
								<button class="btn btn-outline-primary">
									<span>{% trans %}Nombres de prise en charges{% endtrans %}</span>
									<span class="badge bg-primary rounded-pill">{{ factures|length }}</span>
								</button>
							
						</div>
					</div>
					<div class="card-body">
						<div class="table-responsive">
							<table class="table table-bordered table-striped card-table table-vcenter text-nowrap" id="datatable">
								<thead>
									<tr>
										<th>{% trans %}N°{% endtrans %}</th>
										<th>{% trans %}Reférence{% endtrans %}</th>
										<th scope="row">{% trans %}Société{% endtrans %}</th>
										<th scope="row">{% trans %}Net à payer{% endtrans %}</th>
										<th scope="row">{% trans %}Etat{% endtrans %}</th>
										<th>{% trans %}Opérations{% endtrans %}</th>
									</tr>
								</thead>
								<tfoot>
									<tr>
										<th>{% trans %}N°{% endtrans %}</th>
										<th>{% trans %}Reférence{% endtrans %}</th>
										<th scope="row">{% trans %}Société{% endtrans %}</th>
										<th scope="row">{% trans %}Net à payer{% endtrans %}</th>
										<th scope="row">{% trans %}Etat{% endtrans %}</th>
										<th>{% trans %}Opérations{% endtrans %}</th>
									</tr>
								</tfoot>
								<tbody>
									{% set i = 1 %}
									{% for facture in factures %}
										<tr>
											<td>{{ i }}</td>
											<td>
												<a class="font-weight-normal1" href="">{{ facture.patient.nom }}</a>
											</td>
											<td>{{ facture.patient.societe.societe }}</td>
											<td>{{ facture.netApayer }}</td>
											<td>
												{% if facture.etatFacture.etatFacture == 'SOLDE' %}
													<span class="badge badge-gradient-success mt-2">{{ facture.etatFacture.etatFacture }}</span>
													{% else %}
													<span class="badge badge-gradient-danger mt-2">{{ facture.etatFacture.etatFacture }}</span>
												{% endif %}
												
											</td>
											
											<td>
												<a href="{{ path ('details_facture', {'slug': facture.slug })}}" class="btn btn-outline-primary"><i class="fe fe-eye"></i></a>

												<a href="{{ path ('imprimer_facture', {'slug': facture.slug }) }}" class="btn btn-outline-primary" target="_blank"><i class="fe fe-printer"></i></a>

											</td>
										</tr>
										{% set i = i + 1 %}
									{% endfor %}
									
									
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- End app-content-->
{% endblock %}

{% block javascripts %}
    <script>
		function confirmation(){
            
			swal({
				title: "{% trans %}Avertissement !{% endtrans %}",
				text: "{% trans %}Voulez-vous vraiment supprimer cette catégorie ?{% endtrans %}",
				type: "warning",
				showCancelButton: true,
				confirmButtonText: '{% trans %}Oui{% endtrans %}',
				cancelButtonText: '{% trans %}Non{% endtrans %}'
			});
			
		};
        
    </script>
{% endblock %}