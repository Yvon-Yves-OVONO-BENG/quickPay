{% extends 'baseConnexion.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block stylesheets %}
	<link href="{{ asset ('assets/iconfonts/feather/feather.css')}}" rel="stylesheet"/>
	<link rel="stylesheet" href="{{ asset ('assets/plugins/notify/css/notifIt.css')}}">
{% endblock %}

{% block body %}

{% for message in app.flashes('info')  %}
{# <div class="row mt-5">
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<div class="alert alert-danger" role="alert">
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-hidden="true">×</button>
			<i class="fa fa-frown-o me-2" aria-hidden="true"></i>{{ message }}
		</div>
	</div>
	<div class="col-md-2"></div>
</div> #}
	
		
	<!-- NOTIFICATIONS js-->
	<script src="{{ asset ('assets/js/notifications.js')}}"></script>

	<!-- INTERNAL Notifications js -->
	<script src="{{ asset ('assets/plugins/notify/js/rainbow.js')}}"></script>
	<script src="{{ asset ('assets/plugins/notify/js/sample.js')}}"></script>
	<script src="{{ asset ('assets/plugins/notify/js/notifIt.js')}}"></script>
	<script>
		notif({
				type: "error",
				msg: "<b>{{ message }}</b>",
				position: "center",
				width: 500,
				height: 60,
				autohide: false
			});
	</script>

{% endfor %}

<body class="bg-primary register-2" style="background-color: #7662C5 !important">

	<div class="page">
		<div class="page-content">
			<div class="container">
				<div class="row">
					<div class="col mx-auto">
						<div class="row justify-content-center">
							<div class="col-md-4">
								<div class="text-center mb-6">
									<img src="{{ asset ('assets/images/brand/logo.png')}}" height="50" weight="50" alt="logo">
								</div>
								{% for message in app.flashes('error')  %}

									<div class="alert alert-light-danger" role="alert">
										<button type="button" class="btn-close text-danger mr-negative-16" data-bs-dismiss="alert" aria-hidden="true">×</button>
										<strong><i class="fa fa-frown-o me-2" aria-hidden="true"></i>{{ message }}</strong>
									</div>

								{% endfor %}
								<div class="card border-danger">
									<div class="card-body">
										<div class="text-center mb-3">
											<h2 class="mb-2">{% trans %}Mot de passe oublié ?{% endtrans %}</h2>
											<a href="javascript:void(0);" class=""></a>
										</div>
										{# <form class="mt-5"> #}
										{{ form_start(form) }}

											<div class="input-group mb-4">
												<div class="input-group-text">
													<i class="fe fe-mail"></i>
												</div>
												{# <input type="text" class="form-control" placeholder="Email"> #}
												{{ form_widget(form.email) }}
													<div class="invalid-feedback">
												{{ form_errors(form.email) }}
												</div>

											</div>
											<input type="hidden" value="{{ csrfToken }}" name="csrfToken">
											<div class="form-group text-center mb-3">
												<button type="submit" class="btn btn-outline-primary btn-md w-100 br-7"><i class="fa fa-send-o me-2"></i> {% trans %}Envoyez moi un mail{% endtrans %}</button>
											</div>
											{# <div class="form-group fs-12 text-center">
												By Clicking Send ,You agree to our  <a href="javascript:void(0);" class="font-weight-bold">Terms & Conditions</a> and have read and acknowledge our  <a href="javascript:void(0);" class="font-weight-bold">Privacy & Services.</a>
											</div> #}
										{# </form> #}
										{{ form_end(form) }}
									</div>
								</div>
								<div class="text-center register-icons">
									<div class="small text-white mb-4"></div>
									<a href="{{ path ('accueil') }}" class="btn bg-white-50 text-white-50 font-weight-semibold w-12 google me-2" type="button"><i class="fa fa-home"></i></a>
									<a href="{{ path ('app_login')}}" class="btn bg-white-50 text-white-50 font-weight-semibold  w-12 facebook me-2" type="button"><i class="fa fa-unlock"></i></a>
									<a href="{{ path ('app_register')}}" class="btn bg-white-50 text-white-50 font-weight-semibold w-12 twitter me-2" type="button"><i class="fa fa-user-plus"></i></a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}